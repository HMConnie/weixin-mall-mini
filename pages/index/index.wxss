/**index.wxss**/

Page {
    height: 100%;
}

.content {
    width: 100%;
    height: 100%;
}

.content_container {
    width: 100%;
    height: calc(100% - 60rpx);
}

.banner_swiper {
    width: 100%;
    height: calc(750rpx * 340 / 750);
}

.banner_image {
    width: 100%;
}

.cat_view {
    display: flex;
}

.cat_nav {
    flex: 1;
}

.cat_nav image {
    width: 100%;
    height: 240rpx;
}

.floor_title image {
    height: 60rpx;
    width: 100%;
    margin-left: 10rpx;
}

.floor_content {
    display: flex;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.floor_small {
    flex: 1;
}

.floor_big {
    flex: 2;
    display: flex;
    margin-left: 10rpx;
}

.floor_small image {
    height: 360rpx;
    width: 100%;
    border-radius: 10rpx;
}

.floor_big_image {
    flex: 1;
    width: 100%;
    justify-content: space-between;
    align-content: space-between;
}

.floor_big image {
    height: 175rpx;
    width: 96%;
    border-radius: 10rpx;
}