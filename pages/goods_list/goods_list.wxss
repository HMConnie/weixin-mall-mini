/* pages/goods_list/goods_list.wxss */

.tab_container {
    display: flex;
    border-bottom: 1px solid #ccc;
    padding: 20rpx;
}

.goods_image {
    flex: 1;
}

.goods_content {
    flex: 3;
    display: flex;
    flex-direction: column;
    align-content: space-between;
    justify-content: space-between;
    margin-left: 20rpx;
}

.goods_image image {
    width: 100%;
    height: 200rpx;
}

.goods_name {
    width: 100%;
    font-size: 26rpx;
    color: #000
}

.goods_price {
    font-size: 26rpx;
    color: var(--themeColor);
}