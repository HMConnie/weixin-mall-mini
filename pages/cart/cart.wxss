/* pages/cart/cart.wxss */
.cart_address {
  padding: 20rpx;
}
.cart_address .address_btn button {
  width: 40vw;
  font-size: 32rpx;
}
.cart_address .address_content .address_name {
  display: flex;
  justify-content: space-between;
}
.cart_address .address_content .address_name .people {
  color: #000;
}
.cart_address .address_content .adddress_detail {
  color: #000;
  margin-top: 10rpx;
}
.cart_content .cart_title {
  color: #000;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  border-top: 5px solid #ccc;
}
.cart_content .cart_list {
  display: flex;
  height: 200rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_list .check {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .check checkbox {
  transform: scale(0.8, 0.8);
}
.cart_content .cart_list .goods_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .goods_image image {
  width: 85%;
}
.cart_content .cart_list .cart_info {
  flex: 4;
  padding: 10rpx 20rpx;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_info .goods_name {
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart_content .cart_list .cart_info .goods_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.cart_content .cart_list .cart_info .goods_info .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.cart_content .cart_list .cart_info .goods_info .goods_num {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_info .goods_info .goods_num .num {
  flex: 1;
  padding: 20rpx;
}
.cart_content .cart_list .cart_info .goods_info .goods_num button {
  flex: 1;
  font-size: 26rpx;
}
.empty_cart {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 600rpx;
}
.empty_cart image {
  width: 50%;
}
.empty_cart .cart_emtpy_text {
  font-size: 32rpx;
  color: #000;
  margin-top: 20rpx;
}
.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100vw;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #ccc;
  background-color: white;
}
.bottom .all_check {
  flex: 1;
  font-size: 24rpx;
}
.bottom .all_check checkbox {
  transform: scale(0.7, 0.7);
}
.bottom .total {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-right: 20rpx;
}
.bottom .total .total_price {
  display: flex;
}
.bottom .total .total_price .total_text {
  font-size: 30rpx;
}
.bottom .total .total_price .price_amount {
  font-size: 32rpx;
  margin-left: 10rpx;
  color: var(--themeColor);
}
.bottom .total .freight {
  font-size: 24rpx;
}
.bottom .btn_settlement {
  flex: 1;
  font-size: 40rpx;
  font-weight: 600;
  background-color: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.bottom .btn_without_goods {
  background-color: #ccc;
}
